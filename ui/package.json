{
  "name": "@darksoil-studio/tasks",
  "version": "0.1.0",
  "scripts": {
    "start": "vite --clearScreen false --port $UI_PORT",
    "build": "pnpm lint && tsc && pnpm analyze",
    "lint": "eslint src && prettier \"src/**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint src --fix && prettier \"src/**/*.ts\" --write --ignore-path .gitignore",
    "localize:extract": "lit-localize extract",
    "localize:build": "lit-localize build",
    "analyze": "cem analyze --litelement --exclude dist",
    "prepare": "tsc && pnpm localize:build && pnpm analyze"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "locales",
    "src"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/darksoil-studio/tasks.git"
  },
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*",
    "./locales/*": "./locales/*"
  },
  "dependencies": {
    "@darksoil-studio/notifications": "github:darksoil-studio/notifications#6088d22f0edf032dbe1334acbdbfec46a30de56a&path:ui",
    "@holochain-open-dev/elements": "^0.300.1",
    "@holochain-open-dev/profiles": "github:holochain-open-dev/profiles#f56569a372d5559e4c0b71f777e69c38af4b9539&path:ui",
    "@holochain-open-dev/signals": "^0.300.7",
    "@holochain-open-dev/utils": "^0.300.2",
    "@holochain/client": "^0.17.1",
    "@lit/context": "^1.0.0",
    "@lit/localize": "^0.12.0",
    "@mdi/js": "^7.2.0",
    "@msgpack/msgpack": "^2.8.0",
    "@shoelace-style/shoelace": "^2.11.0",
    "lit": "^3.0.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.9.4",
    "@lit/localize-tools": "^0.6.3",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5",
    "vite": "^4.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "type": "module"
}